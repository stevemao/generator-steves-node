{
  "name": "<%= slugname %>",
  "version": "0.0.0",
  "description": "<%= props.description %>",<% if (props.homepage) { %>
  "homepage": "<%= props.homepage %>",<% } %>
  "author": {
    "name": "<%= props.authorName %>",
    "email": "<%= props.authorEmail %>"<% if (props.authorUrl) { %>,
    "url": "<%= props.authorUrl %>"<% } %>
  },
  "repository": "<%= repoUrl %>",
  "license": "<%= props.license %>",
  "files": [
    "index.js"<% if (props.cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [
    "<%= slugname %>"<% for (var i = 0; i < keywords.length; i++) { %>,
    "<%= keywords[i] %>"<% } %>
  ],
  "dependencies": {<% if (props.cli) { %>
    "meow": "^3.1.0"
  <% } %>},
  "devDependencies": {<% if (props.browser) { %>
    "browserify": "^9.0.3",<% } %>
    "coveralls": "^2.11.2",
    "istanbul": "^0.3.8",
    "jscs": "^1.11.3",
    "jshint": "^2.6.3",
    "mocha": "*"
  },
  "scripts": {<% if (props.browser) { %>
    "browser": "browserify index.js > browser.js",<% } %>
    "coverage": "istanbul cover _mocha -- -R spec && rm -rf ./coverage",
    "lint": "jshint *.js test --exclude node_modules",
    "style": "jscs *.js test",
    "test": "mocha"
  }<% if (props.cli) { %>,
  "bin": {
    "<%= slugname %>": "cli.js"
  }<% } %>
}
